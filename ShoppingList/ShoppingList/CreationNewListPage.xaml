<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShoppingList.CreationNewListPage"
             Title="Создание списка">

    <ContentPage.Content>
        <Grid Padding="20">

            <Entry VerticalOptions="Start" 
                   HorizontalOptions="Center"
                   Placeholder="Введите название списка">
            </Entry>

            <Entry
                VerticalOptions="Start"
                HorizontalOptions="Start"
                Placeholder="Введите ингридиент"
                Margin="25">
            </Entry>

            <Entry
                VerticalOptions="Start"
                HorizontalOptions="End"
                Placeholder="Введите количество"
                Margin="25">
            </Entry>

            <Picker x:Name="UnitPicker"
                VerticalOptions="Start"
                HorizontalOptions="End"
                Margin="0, 20"
                SelectedItem="0">
                <Picker.Items>
                    <x:String>Кг</x:String>
                    <x:String>Шт</x:String>
                    <x:String>Л</x:String>
                </Picker.Items>
            </Picker>

            <Button 
                VerticalOptions="Start"
                HorizontalOptions="Center"
                Text="Добавить ингридиент"
                Margin="70">
            </Button>

            <ScrollView
                VerticalOptions="Start"
                HorizontalOptions="Center"
                Margin="50, 130"
                HeightRequest="100">
                <Label FontSize="20">
                    <Label.Text>
                        <x:String>ScrollView может также быть вложенным элементом внтри других элементов управления и контейнеров компоновки. В этом случае рекомендуется явным образом устанавливать для ScrollView высоту с помощью свойства HeightRequest. Например:</x:String>
                    </Label.Text>
                </Label>
            </ScrollView>

            <Button 
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Text="Подтвердить"
                Margin="70">
            </Button>
        </Grid>
    </ContentPage.Content>

</ContentPage>